---
export interface Props {
  title: string
  description: string
  img: string
  idx: number
}

const { title, description, img, idx } = Astro.props;
---

<div class="gap-16 mt-20 px-4 max-w-lg sm:w-full sm:max-w-full p-4 lg:max-w-4xl flex sm:flex-row flex-col items-center justify-between text-black">
  <img
    class="p-4 max-w-xs lg:max-w-md"
    src={img}
  />
  <div class="p-4">
    <h2 class="text-xl font-bold mb-4">{title}</h2>
    <p class="sm:text-base text-sm mb-4">
      {description}
    </p>
  </div>
</div>